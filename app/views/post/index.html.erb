<div class="container-lg mt-4 d-flex justify-content-around">
<h1 style="text-align: center">Posts</h1>
<h3><%= link_to "+ Post", new_post_path%></h3>
</div>
<div class="container-lg mt-4 d-flex flex-row justify-content-around">
<% @posts.each do |post| %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title%></h5>
    <p class="card-text"><%= post.content%></p>
    <%= link_to post.id, post_path(post)%>
  </div>
</div>
<%end%>
</div>