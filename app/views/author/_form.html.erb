<div class="container-lg mt-4 d-flex flex-column align-items-center">
<%= form_with(model: author) do |form| %>

  <div class="mt-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
    <% author.errors.full_messages_for(:name).each do |message| %>
        <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
    <% author.errors.full_messages_for(:email).each do |message| %>
        <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :dob, style: "display: block" %>
    <%= form.text_field :dob %>
    <% author.errors.full_messages_for(:dob).each do |message| %>
        <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
    <% author.errors.full_messages_for(:phone_number).each do |message| %>
        <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.submit %>
  </div>
<% end %>
