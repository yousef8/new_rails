<div class="container-lg mt-4 d-flex flex-column">
    <div class="header d-flex flex-row justify-content-around">
        <h1>Authors</h1>
        <h3><%= link_to "+ Author", new_author_path %></h3>
    </div>
    <div class="d-flex flex-row flex-wrap mt-2 justify-content-around">
        <% @authors.each do |author| %>
            <div class="card mt-3 mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= author.name%></h5>
                    <p class="card-text"><%= author.dob%></p>
                    <p class="card-text"><%= author.email%></p>
                    <p class="card-text"><%= author.phone_number%></p>
                    <div class="controls d-flex flex-row justify-content-around">
                        <%= link_to "show", author_path(author)%>
                        <%# <%= link_to "edit", edit_author_path(author)%>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</div>